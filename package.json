{
  "name": "ai-disaster-orchestrator",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:frontend": "npm --workspace packages/frontend run dev",
    "dev:backend": "npm --workspace packages/backend run dev",
    "dev:full": "concurrently \"npm:dev:*\" \"npm:worker:*\"",
    "build": "npm --workspace packages/frontend run build && npm --workspace packages/backend run build",
    "start": "npm --workspace packages/backend run start",
    "db:setup": "npm --workspace packages/backend run db:setup",
    "db:migrate": "npm --workspace packages/backend run db:migrate",
    "db:seed": "npm --workspace packages/backend run db:seed",
    "db:reset": "npm --workspace packages/backend run db:reset",
    "worker:embedding": "npm --workspace packages/backend run worker:embedding",
    "worker:embedding:dev": "npm --workspace packages/backend run worker:embedding:dev",
    "worker:ingestion": "npm --workspace packages/backend run worker:ingestion",
    "ingestion:demo": "npm --workspace packages/backend run ingestion:demo",
    "test": "npm --workspace packages/backend run test && npm --workspace packages/frontend run test",
    "test:integration": "npm --workspace packages/backend run test:integration",
    "lint": "npm --workspace packages/frontend run lint && npm --workspace packages/backend run lint",
    "lint:fix": "npm --workspace packages/frontend run lint:fix && npm --workspace packages/backend run lint:fix",
    "health": "curl -f http://localhost:3001/api/health || echo 'Backend not running'",
    "logs": "docker-compose logs -f",
    "clean": "npm --workspace packages/frontend run clean && npm --workspace packages/backend run clean",
    "deploy:frontend": "npm --workspace packages/frontend run deploy",
    "deploy:backend": "npm --workspace packages/backend run deploy"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.1.1",
    "jest-mock-extended": "^4.0.0",
    "node-fetch": "^2.7.0"
  },
  "dependencies": {
  }
}
