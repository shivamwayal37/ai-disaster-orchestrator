# TiDB (MySQL compatible) connection
TIDB_HOST=your-tidb-host
TIDB_PORT=4000
TIDB_USER=admin
TIDB_PASS=changeme
TIDB_DATABASE=disaster_db

# Database URL for Prisma (format: mysql://user:password@host:port/database)
DATABASE_URL="mysql://admin:changeme@your-tidb-host:4000/disaster_db"

# LLM provider
OPENAI_API_KEY=sk-...
KIMI_API_KEY=

# Jina Embeddings (https://jina.ai/embeddings/)
JINA_API_KEY=your-jina-api-key
JINA_API_URL=https://api.jina.ai/v1
JINA_MODEL=jina-embeddings-v3
JINA_EMBEDDING_DIMENSIONS=1024
JINA_BATCH_SIZE=10
JINA_CONCURRENCY=5
JINA_TIMEOUT_MS=30000
JINA_MAX_RETRIES=3
JINA_RETRY_DELAY_MS=1000
JINA_RATE_LIMIT=60

# Maps & routing
GOOGLE_MAPS_API_KEY=
OPENROUTESERVICE_KEY=

# Twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=+1555....

# App
JWT_SECRET=changeme
NODE_ENV=development
PORT=4000

# =============================================================================
# AI DISASTER RESPONSE ORCHESTRATOR - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# =============================================================================
# BACKEND CONFIGURATION  
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# TIDB SERVERLESS DATABASE (REQUIRED)
# =============================================================================
# Get these from: https://tidbcloud.com/console/clusters
DATABASE_URL="mysql://username:password@gateway01.us-west-2.prod.aws.tidbcloud.com:4000/database_name?ssl={"rejectUnauthorized":true}"

# Alternative individual connection parameters
TIDB_HOST=gateway01.us-west-2.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your_username
TIDB_PASSWORD=your_password
TIDB_DATABASE=your_database_name

# =============================================================================
# AI SERVICES (REQUIRED FOR CORE FUNCTIONALITY)
# =============================================================================

# Kimi AI (Moonshot) - Entity Extraction & Summarization
# Get from: https://platform.moonshot.cn/console/api-keys
KIMI_API_KEY=your_kimi_api_key_here

# OpenAI - LLM Response Planning
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Jina AI - Text Embeddings (Alternative to OpenAI)
# Get from: https://jina.ai/embeddings/
JINA_API_KEY=your_jina_api_key_here

# =============================================================================
# EXTERNAL APIS (REQUIRED FOR ACTIONS)
# =============================================================================

# Google Maps - Route Planning & Geocoding
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twilio - SMS Notifications
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# DATA SOURCE APIS (OPTIONAL - FOR REAL DATA INGESTION)
# =============================================================================

# OpenWeatherMap - Weather Alerts
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# Twitter API v2 - Social Media Monitoring
# Get from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# NASA FIRMS - Satellite Fire Data
# Get from: https://firms.modaps.eosdis.nasa.gov/api/
NASA_FIRMS_API_KEY=your_nasa_firms_api_key

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL - USES DOCKER BY DEFAULT)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
EMBEDDING_BATCH_SIZE=10
WORKER_CONCURRENCY=2
INGESTION_INTERVAL=300000
EMBEDDING_QUEUE_NAME=embedding-queue

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================
JWT_SECRET=your_jwt_secret_for_api_authentication
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL_SECONDS=3600

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Optional
CACHE_REDIS_URL=redis://localhost:6379
